<!DOCTYPE html>
 <html>
  <head></head>

<body>
<h3>Books</h3>
<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show' , book_path(book.id) %></td>
      <td><%= link_to 'Edit' , edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy' , book_path(book.id), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h3>New book</h3>
<div id="error_explanation">
<% if @book.errors.any? %>
  <span class="underline"><%= @book.errors.count %>errors prohibited this book from being saved:</span>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

<div class="tosyo">
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
</div>

  <label for="book_body">Body</label>
  <%= f.text_area :body %>

  <br><%= f.submit 'Create Book' %></br>

<% end %>
</body>
</html>